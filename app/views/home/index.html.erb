<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
  <% flash.discard(:notice) %>
<% end %>

<div class="flex flex-col items-center w-full h-full pt-12 gap-6">
  <!-- Formulario de búsqueda -->
  <%= search_form_for @q, url: root_path, method: :get, class: "flex flex-col gap-4" do |f| %>
    <div class="flex flex-wrap gap-4">
      <div class="w-full sm:w-1/3">
        <%= f.label :name_cont, "Nombre contiene", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name_cont, placeholder: "Buscar por nombre", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-lilac focus:border-lilac sm:text-sm" %>
      </div>
  
      <div class="w-full sm:w-1/3">
        <%= f.label :description_cont, "Descripción contiene", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :description_cont, placeholder: "Buscar por descripción", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-lilac focus:border-lilac sm:text-sm" %>
      </div>
  
      <div class="w-full sm:w-1/3">
        <%= f.label :category_id_eq, "Categoría", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :category_id_eq, options_from_collection_for_select(@categories, :id, :name, @q.category_id_eq), { include_blank: "Todas las categorías" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-lilac focus:border-lilac sm:text-sm" %>
      </div>
    </div>
  
    <div class="flex justify-end">
      <%= f.submit "Buscar", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-lilac hover:bg-lilac-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lilac" %>
    </div>
  <% end %>
  

  <!-- Resultados -->
  <div class="flex flex-wrap justify-center gap-6 w-full">
    <% if @products.present? %>
      <% @products.each do |product| %>
        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden sm:max-w-md md:max-w-lg lg:max-w-xl">
          <div class="p-5 bg-lilac">
            <% if product.images.any? %>
              <%= image_tag product.images.first, class: "w-44 h-32 object-cover" %>
            <% else %>
              <div class="w-44 h-32 bg-gray-200 flex items-center justify-center">
                <p class="text-gray-500 text-sm">Sin imagen</p>
              </div>
            <% end %>

            <h5 class="text-lg font-bold text-gray-900"><%= product.name %></h5>
            <p class="mt-2 text-gray-700 text-sm sm:text-base"><%= product.description %></p>
            <p class="mt-2 text-gray-700 text-sm sm:text-base">Precio: $<%= product.unit_price %></p>
            <p class="mt-2 text-gray-700 text-sm sm:text-base">Stock: <%= product.available_stock %></p>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="mt-2 text-gray-700 text-sm sm:text-base">No hay productos disponibles</p>
    <% end %>
  </div>
</div>

